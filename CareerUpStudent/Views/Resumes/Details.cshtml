@model CareerUpStudent.Models.Resume
    <style>
        .display-4 {
            color: cornflowerblue;
        }
    </style>
    @{
        ViewData["Title"] = "Подробности";
    }

    <h1 class="display-4">Подробности</h1>

    <div>
        <h4>Резюме</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Название
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                Ссылка
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Link)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id">Изменить</a> 
        <a asp-action="Index">Вернуться назад</a>
    </div>
